<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_back_arrow"
            android:background="@drawable/shap_rounded_border_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/avatar_persona"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/shap_rounded_purple"
            android:gravity="center"
            android:text="A"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            android:text="Ary Suryawan"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/avatar_persona"
            app:layout_constraintTop_toTopOf="parent" />


    <TextView
            android:id="@+id/item_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/rounded_border_blue"
            android:gravity="center_vertical|left"
            android:paddingHorizontal="20dp"
            android:text="Jl Tanah Kusir, Jakarta Selatan"
            android:textColor="@color/color_black_010F07"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/avatar_persona" />

    <TextView
            android:id="@+id/item_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_blue"
            android:gravity="center_vertical|left"
            android:paddingHorizontal="20dp"
            android:text="0856 - 973-66189"
            android:textColor="@color/color_black_010F07"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_address" />

    <TextView
            android:id="@+id/item_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_blue"
            android:gravity="center_vertical|left"
            android:paddingLeft="20dp"
            android:text="ary@mail.com"
            android:textColor="@color/color_black_010F07"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_phone" />

    <TextView
            android:id="@+id/item_status_subscribe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_blue"
            android:gravity="center_vertical|right"
            android:paddingRight="20dp"
            android:text="@string/subscribe_text"
            android:textColor="@color/color_grey_999999"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_email" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bg_btn_blue_validation"
            android:text="Logout"
            android:textAllCaps="false"
            android:enabled="true"
            android:textColor="@color/color_white"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>