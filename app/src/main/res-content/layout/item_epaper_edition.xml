<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

    <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Pelita Baru - Edisi 11 April 2021"
            android:textAlignment="center"
            android:textAppearance="@style/FontInterBold"
            android:textColor="@color/color_blue_073f65"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="20 Januari 2021"
            android:textAlignment="center"
            android:textAppearance="@style/FontInterBold"
            android:textColor="@color/color_grey_999999"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_title" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_black_010F07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_date" />


</androidx.constraintlayout.widget.ConstraintLayout>

