<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Font Style   -->
    <style name="FontBold" parent="TextAppearance.AppCompat">
        <item name="fontPath">font/CircularStd-Bold.otf</item>
    </style>

    <style name="FontBook" parent="TextAppearance.AppCompat">
        <item name="fontPath">font/CircularStd-Book.otf</item>
    </style>

    <style name="FontInterBlack" parent="android:TextAppearance">
        <item name="fontPath">font/Inter-Black.ttf</item>
    </style>
    <style name="FontInterBold" parent="android:TextAppearance">
        <item name="fontPath">font/Inter-Bold.ttf</item>
    </style>
    <style name="FontInterMedium" parent="android:TextAppearance">
        <item name="fontPath">font/Inter-Medium.ttf</item>
    </style>
    <style name="FontInterRegular" parent="android:TextAppearance">
        <item name="fontPath">font/Inter-Regular.ttf</item>
    </style>
    <style name="FontInterSemiBold" parent="android:TextAppearance">
        <item name="fontPath">font/Inter-SemiBold.ttf</item>
    </style>

</resources>
